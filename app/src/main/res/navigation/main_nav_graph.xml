<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.jdscaram.suspeito.ui.main.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_mainFragment_to_editCardDialog"
            app:destination="@id/editCardDialog" />
    </fragment>
    <dialog
        android:id="@+id/editCardDialog"
        android:name="com.jdscaram.suspeito.ui.edit.EditCardDialog"
        android:label="EditCardDialog">
        <argument
            android:name="card"
            app:argType="com.jdscaram.suspeito.domain.model.Card" />
    </dialog>
</navigation>
